<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back4"
    android:padding="20dp"
    tools:context=".UpdateTaskDetails">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update or delete your task Details"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="sans-serif"/>
    <EditText
        android:id="@+id/updateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/edittetext_layout"
        android:textColorHint="#454545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/updateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Description"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/edittetext_layout"
        android:textColorHint="#454545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/updatePriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Priority"
        android:padding="15dp"
        android:background="@drawable/edittetext_layout"
        android:textColorHint="#454545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/updateDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittetext_layout"
        android:hint="Deadline"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/delete"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="Delete"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/update"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Update"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>